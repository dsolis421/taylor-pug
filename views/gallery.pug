block links
  link(rel='stylesheet', href='/stylesheets/gallery.css')

block content
  include nav.pug
  section.dark-header
    .news-header
      h4 Enjoy these pictures of rescue dogs and cats, taken by our volunteer photographers.
        | These images are used by rescue shelters to help promote their animals.
        | It's our small way of helping find loving, forever homes for rescue pets.
      h3 totes gallery
      span#fb-share(data-url=`https://totespets.com/gallery/`)
        i.fab.fa-facebook-square
      span#tw-share
        a(href=`https://twitter.com/intent/tweet?text=Our+collection+of+rescued+dogs+and+cats&url=https://totespets.com/gallery/`)
          i.fab.fa-twitter-square
  section.gallery-section
    .gallery-nav
      //stub page number with nav arrows each way
      .min-gallery-page
        i.fal.fa-angle-double-left
      .prev-gallery-page
        i.fal.fa-angle-left
      input.gallery-page-input
      p of 
        span.gallery-max= max[0].page
      .next-gallery-page
        i.fal.fa-angle-right  
      .max-gallery-page
        i.fal.fa-angle-double-right
    .gallery-set
      each pic in galleryset
        img(src=`${pic.image}`, alttext=`${pic.name}`)
    .gallery-nav
      //stub page number with nav arrows each way
      .min-gallery-page
        i.fal.fa-angle-double-left
      .prev-gallery-page
        i.fal.fa-angle-left
      input.gallery-page-input
      p of 
        span.gallery-max= max[0].page
      .next-gallery-page
        i.fal.fa-angle-right  
      .max-gallery-page
        i.fal.fa-angle-double-right          
block scripts
