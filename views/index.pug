extends layout

block content
  section#intro
    .header
      .paw-row
        .paw-menu#articles-paw
          a(href="/articles") articles
        .paw-menu#adopt-paw
          a(href="/adoption") adopt        
        .paw-menu#foster-paw
          a(href="/foster") foster
        .paw-menu#blog-paw
          a(href="/blog") blog
      .paw-pad  
        h1 totes pets
        p Help find loving, forever homes for surrendered and rescued animals.
        i.fa.fa-paw.fa-2x
        p Promote safe and responsible pet ownership.
  section.preview#article-preview
    aside
      a(href=`/articles/${previews.a[0].quick}`)
        h3= previews.a[0].headline
    article
      p!= previews.a[0].story[0].text[0]
      a(href=`/articles/${previews.a[0].quick}`) Read Article
  section.preview#blog-preview
    aside
      a(href=`/blog/${previews.b[0].quick}`)
        h3= previews.b[0].headline
    article
      p!= previews.b[0].story[0].text[0]
      a(href=`/blog/${previews.b[0].quick}`) Read Blog
    
